<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="Cash Track"
        android:supportsRtl="true"
        android:theme="@style/Theme.CashTrack"
        tools:targetApi="31">
        <activity
            android:name=".EditExpenseTransaction"
            android:exported="false" />
        <activity
            android:name=".EditIncomeTransaction"
            android:exported="false" />
        <activity
            android:name=".Limit"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginPage" />
        <activity android:name=".Registration" />
        <activity android:name=".MainInterface" />
        <activity android:name=".TransactionsActivity" />
        <activity android:name=".Profile" />
        <activity android:name=".UpdateProfile" />
        <activity android:name=".PopupAddIncome" />
        <activity android:name=".PopupAddExpense" />
    </application>

</manifest>